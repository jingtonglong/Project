<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorAccent">@color/app_color</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--导航栏的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--通知栏等的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--字体的主题颜色-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--解决textView全局大小写问题-->
        <item name="android:textAllCaps">false</item>
        <!-- toolbar中带动画效果的箭头，设置动画形式与箭头颜色 -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- toolbar中menu的文字的颜色,并非溢出菜单的内容文字颜色 -->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:windowAnimationStyle">@style/pageInOut</item>
    </style>

    <!-- 页面跳转间的过渡动画 -->
    <style name="pageInOut">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>

        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>

        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>

        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppNoTitle" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Splash" parent="AppNoTitle">
        <item name="android:windowBackground">@drawable/splash_layer</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 左边的箭头指示-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="home_middle_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="home_middle_image">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
    </style>

    <style name="home_middle_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="news_item_icon">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
    </style>

    <style name="news_item_icon_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="news_item_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="person_relative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_size_middle</item>
    </style>

    <style name="person_image_left">
        <item name="android:layout_width">@dimen/picture_height_small</item>
        <item name="android:layout_height">@dimen/picture_height_small</item>
    </style>

    <style name="person_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_top_big</item>
        <item name="android:paddingLeft">@dimen/padding_size_middle</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="person_image_right">
        <item name="android:layout_width">@dimen/picture_height_small</item>
        <item name="android:layout_height">@dimen/picture_height_small</item>
        <item name="android:src">@drawable/arrom_right</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="login_input_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">@drawable/grey_background</item>
        <item name="android:padding">@dimen/padding_size_middle</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="login_input_icon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="login_input_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@color/grey_300</item>
        <item name="android:layout_marginRight">@dimen/margin_middle</item>
        <item name="android:layout_marginLeft">@dimen/margin_middle</item>
    </style>

    <style name="login_input_edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/blue_400</item>
        <item name="android:textColorHint">@color/blue_400</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_200</item>
    </style>

    <style name="person_info_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_size_middle</item>
        <item name="android:background">@drawable/person_input_background</item>
        <item name="android:layout_marginLeft">@dimen/margin_middle</item>
        <item name="android:layout_marginRight">@dimen/margin_middle</item>
        <item name="android:layout_marginTop">@dimen/margin_middle</item>
    </style>

    <style name="person_info_icon">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_middle</item>
    </style>

    <style name="person_info_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_middle</item>
    </style>

    <style name="person_info_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_middle</item>
        <item name="android:background">@null</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="line_left" parent="line">
        <item name="android:layout_marginLeft">52dp</item>
    </style>

    <style name="submit_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/margin_middle</item>
        <item name="android:background">@drawable/green_submit_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="home_middle_left_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding_size_middle</item>
    </style>

    <style name="home_middle_left_icon">
        <item name="android:layout_width">@dimen/big_icon</item>
        <item name="android:layout_height">@dimen/big_icon</item>
    </style>

    <style name="home_middle_left_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_marginTop">@dimen/margin_middle</item>
    </style>

    <style name="home_middle_left_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="home_middle_left">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="home_middle_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_size_middle</item>
    </style>

    <style name="home_middle_right_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="home_middle_right_icon">
        <item name="android:layout_width">@dimen/icon_size_middle</item>
        <item name="android:layout_height">@dimen/icon_size_middle</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="home_middle_right_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">@dimen/margin_middle</item>
        <item name="android:textColor">@color/home_blue</item>
    </style>

    <style name="text_orange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_orange</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">@dimen/padding_size_middle</item>
        <item name="android:paddingRight">@dimen/padding_size_middle</item>
        <item name="android:background">@drawable/orange_text_background</item>
    </style>

    <style name="chat_person_info_relative">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_size_middle</item>
    </style>
    <style name="chat_person_info_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="chat_person_info_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="huan_zhe_info_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:padding">@dimen/padding_size_middle</item>
        <item name="android:layout_margin">@dimen/margin_middle</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/green_submit_background</item>
    </style>
</resources>
