<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".mvp.view.fragment.LiangBiaoPingGuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/liangbiao_1"
                android:background="@drawable/grey_round_background"
                style="@style/liangbiao_linear"
                >

                <View
                    style="@style/yingyang_baogao_detail_title_icon"
                    android:background="@drawable/yellow_icon_background" />

                <TextView
                    style="@style/yingyang_baogao_detail_title_label"
                    android:text="SGA主管全面评定" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/liangbiao_2"
                android:background="@drawable/grey_round_background"
                style="@style/liangbiao_linear">

                <View
                    style="@style/yingyang_baogao_detail_title_icon"
                    android:background="@drawable/blue_icon_background" />

                <TextView
                    style="@style/yingyang_baogao_detail_title_label"
                    android:text="MIS营养不良炎症评定" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/liangbiao_3"
                android:background="@drawable/grey_round_background"
                style="@style/liangbiao_linear">

                <View
                    style="@style/yingyang_baogao_detail_title_icon"
                    android:background="@drawable/purple_icon_background" />

                <TextView
                    style="@style/yingyang_baogao_detail_title_label"
                    android:text="营养风险筛选NRS2002评估" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/liangbiao_4"
                android:background="@drawable/grey_round_background"
                style="@style/liangbiao_linear">

                <View
                    style="@style/yingyang_baogao_detail_title_icon"
                    android:background="@drawable/pink_icon_background" />

                <TextView
                    style="@style/yingyang_baogao_detail_title_label"
                    android:text="MNA简易评估" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/liangbiao_5"
                android:background="@drawable/grey_round_background"
                style="@style/liangbiao_linear">

                <View
                    style="@style/yingyang_baogao_detail_title_icon"
                    android:background="@drawable/blue2_icon_background" />

                <TextView
                    style="@style/yingyang_baogao_detail_title_label"
                    android:text="SF36生活质量评估" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/liangbiao_6"
                android:background="@drawable/grey_round_background"
                style="@style/liangbiao_linear">

                <View
                    style="@style/yingyang_baogao_detail_title_icon"
                    android:background="@drawable/green_icon_background" />

                <TextView
                    style="@style/yingyang_baogao_detail_title_label"
                    android:text="改良SGA主管全面评定" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>