<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:padding="@dimen/padding_size_middle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/icon_size_middle"
            android:layout_height="@dimen/icon_size_middle"
            android:layout_marginLeft="@dimen/margin_middle"
            android:src="@drawable/title_back_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="40dp"
            android:background="@drawable/grey_search_background"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_size_middle"
                android:layout_height="@dimen/icon_size_middle"
                android:src="@drawable/search_icon" />

            <EditText
                android:id="@+id/search_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_middle"
                android:background="@null"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:cursorVisible="true"
                android:hint="输入姓名/手机四位查询患者"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_middle" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>