<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.HuanZheManagerActivity">

    <com.base.sdk.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size" />

    <RadioGroup
        android:id="@+id/huanzhe_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_size_middle"
        android:paddingTop="@dimen/padding_size_middle">

        <RadioButton
            android:id="@+id/huanzhe_group_button_1"
            style="@style/home_radio_button"
            android:checked="true"
            android:drawableTop="@drawable/huanzhe_1"
            android:text="饮食数据"
            android:textColor="@drawable/huanzhe_text_color_1" />

        <RadioButton
            android:id="@+id/huanzhe_group_button_2"
            style="@style/home_radio_button"
            android:drawableTop="@drawable/huanzhe_2"
            android:text="生化检查"
            android:textColor="@drawable/huanzhe_text_color_2" />

        <RadioButton
            android:id="@+id/huanzhe_group_button_3"
            style="@style/home_radio_button"
            android:drawableTop="@drawable/huanzhe_3"
            android:text="营养评估"
            android:textColor="@drawable/huanzhe_text_color_3" />

        <RadioButton
            android:id="@+id/huanzhe_group_button_4"
            style="@style/home_radio_button"
            android:drawableTop="@drawable/huanzhe_4"
            android:text="量表评估"
            android:textColor="@drawable/huanzhe_text_color_4" />

        <RadioButton
            android:id="@+id/huanzhe_group_button_5"
            style="@style/home_radio_button"
            android:drawableTop="@drawable/huanzhe_5"
            android:text="营养报告"
            android:textColor="@drawable/huanzhe_text_color_5" />
    </RadioGroup>

    <View style="@style/line_margin" />

    <include layout="@layout/huanzhe_basic_info_layout" />

    <View style="@style/line_margin" />

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>