<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/margin_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"

    android:padding="@dimen/padding_size_middle"
    >

    <ImageView
        android:layout_width="@dimen/picture_size_small"
        android:layout_height="@dimen/picture_size_small"
        android:src="@drawable/title_back_bg"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_weight="2"
            android:background="@drawable/white_search_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_size_middle"
                android:layout_height="@dimen/icon_size_middle"
                android:src="@drawable/search_icon" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_middle"
                android:background="@null"
                android:maxLines="1"
                android:text="输入联系人姓名"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_middle" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_middle" />
    </LinearLayout>