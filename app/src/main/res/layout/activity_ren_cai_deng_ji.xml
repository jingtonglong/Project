<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jtlrm.ckd.mvp.view.activity.RenCaiDengJiActivity">

    <com.base.sdk.widget.TitleBar
        android:id="@+id/rencai_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rencai_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:layout_marginBottom="@dimen/margin_middle"
        tools:listitem="@layout/rencai_item" />

</LinearLayout>
