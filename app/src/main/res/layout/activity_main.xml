<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RadioGroup
        android:id="@+id/main_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/radio_button_size"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_group_button_1"
            style="@style/home_radio_button"
            android:drawableTop="@drawable/home_1"
            android:checked="true"
            android:text="首页" />

        <RadioButton
            android:id="@+id/main_group_button_2"
            style="@style/home_radio_button"
            android:drawableTop="@drawable/home_2"
            android:text="患者管理" />

        <cn.bingoogolapple.badgeview.BGABadgeRadioButton
            android:id="@+id/main_group_button_3"
            style="@style/home_radio_button"
            android:drawableTop="@drawable/home_3"
            android:text="在线随访" />
        <RadioButton
            android:id="@+id/main_group_button_4"
            style="@style/home_radio_button"
            android:drawableTop="@drawable/home_3"
            android:text="个人中心" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_group" />
</RelativeLayout>