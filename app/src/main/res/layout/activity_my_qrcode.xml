<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.MyQRCodeActivity">

    <com.base.sdk.widget.TitleBar
        android:id="@+id/qr_code_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_middle"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/picture_height_middle"
            android:layout_height="@dimen/picture_height_middle"
            android:src="@drawable/person_change" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size"
            android:text="陈西安"
            android:layout_marginLeft="@dimen/margin_middle"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/no_banner"
        android:layout_margin="@dimen/margin_middle"
        />
</LinearLayout>