<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jtlrm.ckd.mvp.view.activity.ChangePasswordActivity">

    <com.base.sdk.widget.TitleBar
        android:id="@+id/change_password_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size" />

    <LinearLayout style="@style/person_info_linear">

        <ImageView
            style="@style/person_info_icon"
            android:src="@drawable/login_user_icon" />

        <EditText
            style="@style/person_info_input"
            android:hint="请输入原始密码" />
    </LinearLayout>


    <View
        style="@style/line_left"
        android:layout_marginLeft="@dimen/margin_big" />

    <LinearLayout style="@style/person_info_linear">

        <ImageView
            style="@style/person_info_icon"
            android:src="@drawable/login_user_icon" />


        <EditText
            style="@style/person_info_input"
            android:hint="请输入新密码" />
    </LinearLayout>


    <View
        style="@style/line_left"
        android:layout_marginLeft="@dimen/margin_big" />

    <LinearLayout style="@style/person_info_linear">

        <ImageView
            style="@style/person_info_icon"
            android:src="@drawable/login_user_icon" />

        <EditText
            style="@style/person_info_input"
            android:hint="请再次输入密码" />
    </LinearLayout>

    <View
        style="@style/line_left"
        android:layout_marginLeft="@dimen/margin_big" />

    <Button
        android:id="@+id/submit"
        style="@style/submit_button"
        android:text="保存密码" />
</LinearLayout>
