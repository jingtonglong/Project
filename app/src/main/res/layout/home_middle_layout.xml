<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_1"
            style="@style/home_middle_left">

            <LinearLayout style="@style/home_middle_left_linear">

                <ImageView
                    style="@style/home_middle_left_icon"
                    android:src="@drawable/sui_fang_paiban_icon" />

                <TextView
                    style="@style/home_middle_left_label"
                    android:text="随访排班" />
            </LinearLayout>

            <LinearLayout style="@style/home_middle_left_linear1">

                <TextView
                    style="@style/home_middle_left_content"
                    android:text="今日计划" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orange_text"
                        android:text="1" />

                    <TextView
                        style="@style/orange_text"
                        android:layout_marginLeft="2dp"
                        android:text="1" />

                    <TextView
                        style="@style/orange_text"
                        android:layout_marginLeft="2dp"
                        android:text="1" />

                    <TextView
                        style="@style/home_middle_left_content"
                        android:layout_marginLeft="6dp"
                        android:text="人" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout
            android:id="@+id/home_2"
            style="@style/home_middle_left">

            <LinearLayout style="@style/home_middle_left_linear">

                <ImageView
                    style="@style/home_middle_left_icon"
                    android:src="@drawable/shu_ju_shen_he_icon" />

                <TextView
                    style="@style/home_middle_left_label"
                    android:text="数据审核" />
            </LinearLayout>

            <LinearLayout style="@style/home_middle_left_linear1">

                <TextView
                    style="@style/home_middle_left_content"
                    android:text="待审核数据" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orange_text"
                        android:text="1" />

                    <TextView
                        style="@style/orange_text"
                        android:layout_marginLeft="2dp"
                        android:text="2" />

                    <TextView
                        style="@style/orange_text"
                        android:layout_marginLeft="2dp"
                        android:text="1" />

                    <TextView
                        style="@style/home_middle_left_content"
                        android:layout_marginLeft="6dp"
                        android:text="条" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_3"
            style="@style/home_middle_right">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/home_middle_right_label"
                    android:text="新增营养评估" />

                <ImageView
                    style="@style/home_middle_right_icon"
                    android:src="@drawable/home_arrow" />
            </RelativeLayout>

            <TextView
                style="@style/home_middle_right_content"
                android:text="快速记录营养检查数据" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout
            android:id="@+id/home_4"
            style="@style/home_middle_right">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/home_middle_right_label"
                    android:text="量表评估" />

                <ImageView
                    style="@style/home_middle_right_icon"
                    android:src="@drawable/home_arrow" />
            </RelativeLayout>

            <TextView
                style="@style/home_middle_right_content"
                android:text="科学评估营养状态" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout
            android:id="@+id/home_5"
            style="@style/home_middle_right">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/home_middle_right_label"
                    android:text="录入生化数据" />

                <ImageView
                    style="@style/home_middle_right_icon"
                    android:src="@drawable/home_arrow" />
            </RelativeLayout>

            <TextView
                style="@style/home_middle_right_content"
                android:text="帮助患者录入生化数据" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>