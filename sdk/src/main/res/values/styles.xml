<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="home_radio_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="text_space">
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="middle_text_style" parent="text_space">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title_text_style" parent="text_space">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/transparent</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="myDialogAnim" parent="android:Animation">

        <!-- 进入时的动画 -->
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <!-- 退出时的动画 -->
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/app_color</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="line_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="line_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/margin_background</item>
    </style>
</resources>